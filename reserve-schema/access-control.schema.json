{
  "$ref": "#/definitions/access-control-schema",
  "definitions": {
    "access-control-schema": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 60,
          "description": "Title for the access control"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Detailed description about the access control"
        },
        "allow": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1000,
                "description": "Detailed description"
              },
              "principal": {
                "type": "object",
                "properties": {
                  "role": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "description": "The role that is assigned to principal"
                  },
                  "status": {
                    "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/principal/properties/role",
                    "description": "The current status of the principal"
                  },
                  "attributes": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "attribute": {
                          "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/principal/properties/role"
                        },
                        "condition": {
                          "type": "string",
                          "enum": [
                            "equals",
                            "not-equals",
                            "more-than",
                            "less-than",
                            "one-of"
                          ]
                        },
                        "value": {
                          "anyOf": [
                            {
                              "type": "string",
                              "minLength": 1,
                              "maxLength": 100
                            },
                            {
                              "type": "array",
                              "items": {
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 100
                              },
                              "minItems": 2,
                              "maxItems": 30
                            }
                          ]
                        }
                      },
                      "required": [
                        "attribute",
                        "condition",
                        "value"
                      ],
                      "additionalProperties": false
                    },
                    "maxItems": 12,
                    "description": "A list of attributes"
                  }
                },
                "additionalProperties": false,
                "description": "The role or attributes expected from principal"
              },
              "action": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/principal/properties/role"
                },
                "minItems": 1,
                "description": "Action that can be performed by the principal"
              },
              "target": {
                "type": "object",
                "properties": {
                  "documents": {
                    "type": "array",
                    "items": {
                      "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/principal/properties/role"
                    },
                    "minItems": 1,
                    "maxItems": 30,
                    "description": "The documents that could be accessed"
                  },
                  "attributes": {
                    "type": "array",
                    "items": {
                      "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/principal/properties/attributes/items"
                    },
                    "maxItems": 12,
                    "description": "A list of attributes"
                  }
                },
                "required": [
                  "documents"
                ],
                "additionalProperties": false,
                "description": "Documents or attributes that are being accessed"
              },
              "contextual": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/principal/properties/attributes/items"
                },
                "minItems": 1
              }
            },
            "required": [
              "principal",
              "action",
              "target"
            ],
            "additionalProperties": false
          },
          "minItems": 1,
          "maxItems": 300,
          "description": "Operations that are permitted"
        },
        "risks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1000,
                "description": "Description of the risk"
              },
              "mitigation": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1000,
                "description": "Mitigation for the risk"
              },
              "levels": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "medium-reward",
                    "high-reward",
                    "easy-hack",
                    "medium-hack",
                    "high-hack",
                    "vulnerable-to-dev",
                    "vulnerable-to-admin",
                    "vulnerable-to-internal-user",
                    "vulnerable-to-user",
                    "vulnerable-to-anonymous-user"
                  ]
                },
                "maxItems": 10,
                "description": "Motivation and difficulty of the hack"
              }
            },
            "required": [
              "description",
              "levels"
            ],
            "additionalProperties": false,
            "description": "Description of the security risk"
          },
          "minItems": 1,
          "maxItems": 12,
          "description": "Must have features"
        }
      },
      "required": [
        "title",
        "description",
        "allow"
      ],
      "additionalProperties": false,
      "description": "Access control model"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
