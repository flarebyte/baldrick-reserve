{
  "$ref": "#/definitions/access-control-schema",
  "definitions": {
    "access-control-schema": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 60,
          "description": "Title for the access control"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Detailed description about the access control"
        },
        "allow": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1000,
                "description": "Detailed description"
              },
              "user": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "attribute": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100,
                      "description": "Attribute name"
                    },
                    "condition": {
                      "type": "string",
                      "enum": [
                        "equals",
                        "not-equals",
                        "more-than",
                        "less-than",
                        "one-of"
                      ]
                    },
                    "expectation": {
                      "anyOf": [
                        {
                          "type": "string",
                          "minLength": 1,
                          "maxLength": 100
                        },
                        {
                          "type": "array",
                          "items": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 100
                          },
                          "minItems": 2,
                          "maxItems": 30
                        }
                      ]
                    }
                  },
                  "required": [
                    "attribute",
                    "condition",
                    "expectation"
                  ],
                  "additionalProperties": false
                },
                "minItems": 1
              },
              "action": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/user/items"
                },
                "minItems": 1
              },
              "target": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/user/items"
                },
                "minItems": 1
              },
              "contextual": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/access-control-schema/properties/allow/items/properties/user/items"
                },
                "minItems": 1
              }
            },
            "required": [
              "user",
              "action",
              "target",
              "contextual"
            ],
            "additionalProperties": false
          },
          "minItems": 1,
          "maxItems": 300,
          "description": "Operations that are permitted"
        },
        "risks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1000,
                "description": "Description of the risk"
              },
              "mitigation": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1000,
                "description": "Mitigation for the risk"
              },
              "levels": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "medium-reward",
                    "high-reward",
                    "easy-hack",
                    "medium-hack",
                    "high-hack",
                    "vulnerable-to-dev",
                    "vulnerable-to-admin",
                    "vulnerable-to-internal-user",
                    "vulnerable-to-user",
                    "vulnerable-to-anonymous-user"
                  ]
                },
                "maxItems": 10,
                "description": "Motivation and difficulty of the hack"
              }
            },
            "required": [
              "description",
              "levels"
            ],
            "additionalProperties": false,
            "description": "Description of the security risk"
          },
          "minItems": 1,
          "maxItems": 12,
          "description": "Must have features"
        }
      },
      "required": [
        "title",
        "allow"
      ],
      "additionalProperties": false,
      "description": "Access control model"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
