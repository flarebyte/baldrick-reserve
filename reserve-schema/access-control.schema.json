{
  "$ref": "#/definitions/access-control-schema",
  "definitions": {
    "access-control-schema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 20,
          "description": "Short name for the entity"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 60,
          "description": "Title"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Detailed description"
        },
        "purpose": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Why is this entity needed"
        },
        "mustHave": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 12,
          "description": "Must have features"
        },
        "shouldHave": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 12,
          "description": "Should have features"
        },
        "niceToHave": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 12,
          "description": "Nice to have features"
        },
        "shouldNotHave": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 12,
          "description": "Should not have features"
        }
      },
      "required": [
        "name",
        "title"
      ],
      "additionalProperties": false,
      "description": "Access control model"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
