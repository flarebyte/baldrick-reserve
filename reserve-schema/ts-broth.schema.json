{
  "$ref": "#/definitions/typescript-broth",
  "definitions": {
    "typescript-broth": {
      "type": "object",
      "properties": {
        "model": {
          "type": "object",
          "properties": {
            "project": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 60,
                  "description": "Title of the project"
                },
                "description": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 1000,
                  "description": "A concise description that highligths the purpose and main use case"
                },
                "version": {
                  "type": "string",
                  "minLength": 5,
                  "maxLength": 20,
                  "description": "The version of the package in the format 0.0.0"
                },
                "keywords": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 60
                  },
                  "minItems": 1,
                  "description": "List of keywords"
                }
              },
              "required": [
                "title",
                "description",
                "version",
                "keywords"
              ],
              "additionalProperties": false,
              "description": "About the project"
            },
            "readme": {
              "type": "object",
              "properties": {
                "highlights": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 500
                  },
                  "description": "Main highlights for the project"
                },
                "links": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 200
                  },
                  "description": "A list of links in Markdown format"
                },
                "related": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 200
                  },
                  "description": "A list of related links in Markdown format"
                }
              },
              "required": [
                "highlights",
                "links",
                "related"
              ],
              "additionalProperties": false,
              "description": "Information to populate the README.md"
            },
            "github": {
              "type": "object",
              "properties": {
                "account": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 100,
                  "description": "The name of the Github account"
                },
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 100,
                  "description": "The name of the Github project"
                }
              },
              "required": [
                "account",
                "name"
              ],
              "additionalProperties": false,
              "description": "Information about the Github repository"
            }
          },
          "required": [
            "project",
            "readme",
            "github"
          ],
          "additionalProperties": false
        },
        "copyright": {
          "type": "object",
          "properties": {
            "holder": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100,
              "description": "The name of the copyright holder"
            },
            "startYear": {
              "type": "number",
              "minimum": 2000,
              "maximum": 2900,
              "description": "The starting year for the copyright"
            }
          },
          "required": [
            "holder",
            "startYear"
          ],
          "additionalProperties": false,
          "description": "Information about the Github repository"
        },
        "license": {
          "type": "string",
          "enum": [
            "MIT",
            "UNLICENSED"
          ],
          "description": "License for the source code"
        },
        "author": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100,
              "description": "The name of the author"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "The URL for the author"
            }
          },
          "required": [
            "name",
            "url"
          ],
          "additionalProperties": false,
          "description": "Information about the author"
        },
        "implementation": {
          "type": "object",
          "properties": {
            "tags": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "cli",
                  "lib",
                  "commander",
                  "zod",
                  "zest",
                  "pest",
                  "railway"
                ]
              },
              "description": "A list of tags used to trigger some code generation"
            },
            "workflowVersion": {
              "type": "string",
              "const": "0.3.0",
              "description": "Version for the model and workflow of the baldrick-broth config file"
            }
          },
          "required": [
            "tags",
            "workflowVersion"
          ],
          "additionalProperties": false,
          "description": "Information about the implementation that could be useful some of the code generators"
        }
      },
      "required": [
        "model",
        "copyright",
        "license",
        "author",
        "implementation"
      ],
      "additionalProperties": false,
      "description": "Describe the model for a typical typescript project"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
