{
  "$ref": "#/definitions/baldrick-tavern-schema",
  "definitions": {
    "baldrick-tavern-schema": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 60,
          "description": "Title for the tavern group"
        },
        "agents": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "shell"
                  },
                  "title": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 80,
                    "description": "Title summarizing the nature of the section"
                  },
                  "shell": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 200
                  }
                },
                "required": [
                  "kind",
                  "title",
                  "shell"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "type": "string",
                    "const": "openai:text"
                  },
                  "title": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 80,
                    "description": "Title summarizing the nature of the section"
                  },
                  "prompts": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "text": {
                          "type": "string",
                          "minLength": 1,
                          "maxLength": 1000
                        }
                      },
                      "required": [
                        "text"
                      ],
                      "additionalProperties": false
                    },
                    "minItems": 1,
                    "maxItems": 9,
                    "description": "List of prompts"
                  }
                },
                "required": [
                  "kind",
                  "title",
                  "prompts"
                ],
                "additionalProperties": false
              }
            ]
          },
          "propertyNames": {
            "minLength": 1,
            "maxLength": 40
          },
          "description": "List of agents."
        }
      },
      "required": [
        "title",
        "agents"
      ],
      "additionalProperties": false,
      "description": "Model for specifying a discussion for Baldrick tavern"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
