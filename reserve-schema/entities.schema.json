{
  "$ref": "#/definitions/entities-schema",
  "definitions": {
    "entities-schema": {
      "type": "object",
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "purpose": {
                "type": "string"
              },
              "mustHave": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "shouldHave": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "niceToHave": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "shouldNotHave": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "retentionPeriod": {
                "type": "string",
                "enum": [
                  "year",
                  "month",
                  "week",
                  "day"
                ]
              },
              "createFrequency": {
                "type": "string",
                "enum": [
                  "never",
                  "once a year",
                  "once a month",
                  "once a week",
                  "once a day",
                  "once an hour",
                  "once a minute",
                  "once a second"
                ]
              },
              "readFrequency": {
                "$ref": "#/definitions/entities-schema/properties/entities/items/properties/createFrequency"
              },
              "updateFrequency": {
                "$ref": "#/definitions/entities-schema/properties/entities/items/properties/createFrequency"
              },
              "deleteFrequency": {
                "$ref": "#/definitions/entities-schema/properties/entities/items/properties/createFrequency"
              },
              "backupFrequency": {
                "$ref": "#/definitions/entities-schema/properties/entities/items/properties/createFrequency"
              },
              "dataSize": {
                "type": "string",
                "enum": [
                  "B",
                  "KB",
                  "MB",
                  "GB",
                  "TB"
                ]
              },
              "format": {
                "type": "string",
                "enum": [
                  "tabular",
                  "key-value",
                  "document",
                  "graph",
                  "time-series"
                ]
              },
              "search": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "id",
                    "text"
                  ]
                }
              },
              "validation": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "basic",
                    "schema",
                    "service",
                    "access-service",
                    "curated",
                    "machine-learning"
                  ]
                }
              },
              "ownership": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "public",
                    "business",
                    "individual"
                  ]
                }
              },
              "parents": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name",
                    "title"
                  ],
                  "additionalProperties": false
                }
              },
              "uses": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/entities-schema/properties/entities/items/properties/parents/items"
                }
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "primitive",
                    "line",
                    "text",
                    "code",
                    "mime",
                    "image",
                    "media",
                    "url",
                    "ref",
                    "tuple",
                    "encrypted",
                    "hashed",
                    "secret"
                  ]
                }
              },
              "privacy": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "personal",
                    "sensitive-special-category",
                    "privacy-high-risk",
                    "anonymous",
                    "pseudonymous",
                    "financial",
                    "children",
                    "criminal",
                    "ethnic",
                    "political",
                    "religious",
                    "trade-union",
                    "health",
                    "sexual-life",
                    "biometric"
                  ]
                }
              }
            },
            "required": [
              "name",
              "title",
              "description",
              "purpose",
              "mustHave",
              "shouldHave",
              "niceToHave",
              "shouldNotHave",
              "retentionPeriod",
              "createFrequency",
              "readFrequency",
              "updateFrequency",
              "deleteFrequency",
              "backupFrequency",
              "dataSize",
              "format",
              "search",
              "validation",
              "ownership",
              "parents",
              "uses",
              "fields",
              "privacy"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "entities"
      ],
      "additionalProperties": false,
      "description": "Entities schema"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
